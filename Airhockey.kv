<AirPaddle>:
    size:70,70
    canvas:
        Color:
            rgba:0,0,1,1
        Ellipse:
            pos:self.pos
            size:self.size
<AirBorderX>:
    size:10,580
    canvas:
        Color:
            rgba:1,1,0,1
        Rectangle:
            pos:self.pos
            size:self.size
<AirBall>:
    size:40,40
    canvas:
        Color:
            rgba:0,1,0,1
        Ellipse:
            pos:self.pos
            size:self.size
<AirBorder>:
    size:140,10
    canvas:
        Color:
            rgba:1,1,0,1
        Rectangle:
            pos:self.pos
            size:self.size

<AirHockeyGame>:
    ball:air_ball
    paddle1:air_paddle1
    paddle2:air_paddle2
    border1:air_border1
    border2:air_border2
    border3:air_border3
    border4:air_border4
    bod1:air_bod1
    bod2:air_bod2
    canvas:
        Rectangle:
            pos:0,self.center_y+75
            size:self.width,5
        Rectangle:
            pos:0,self.center_y-75
            size:self.width,5
        Line:
            width:2
            circle:
                (self.center_x, self.center_y, min(self.width, self.height)/ 12)
    Label:
        font_size:20
        center_x:root.center_x
        top:root.top+20
        text:"GOAL"
    Label:
        font_size:20
        center_x:root.center_x
        top:root.top-520
        text:"GOAL"
    Label:
        font_size:20
        center_x:root.width*3/4
        top:root.top-150
        text:"score 1 :"
    Label:
        font_size:20
        center_x:root.width*3/4
        top:root.top-345
        text:"score 2 :"
    Label:
        font_size:20
        center_x:root.width*3.6/4
        top:root.top-150
        text:str(root.paddle2.score)
    Label:
        font_size:20
        center_x:root.width*3.6/4
        top:root.top-345
        text:str(root.paddle1.score)
    AirPaddle:
        id:air_paddle1
        x:root.width/4
        center_y:root.center_y-200
    AirPaddle:
        id:air_paddle2
        x:root.width*3/4
        center_y:root.center_y+200
    AirBall:
        id:air_ball
        center:self.parent.center
    AirBorder:
        id:air_border1
        x:root.x
        center_y:root.center_y-294.5
    AirBorder:
        id:air_border2
        x:root.x+220
        center_y:root.center_y-294.5
    AirBorder:
        id:air_border3
        x:root.x
        center_y:root.center_y+294.5
    AirBorder:
        id:air_border4
        x:root.x+220
        center_y:root.center_y+294.5
    AirBorderX:
        id:air_bod1
        x:root.x
        center_y:root.center_y
    AirBorderX:
        id:air_bod2
        x:root.x+350
        center_y:root.center_y